    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#E0E0E0" /> <!-- Cor quando pressionado -->
                <corners android:radius="110dp" /> <!-- Ajuste o raio conforme necessário -->
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- Cor padrão -->
                <corners android:radius="110dp" /> <!-- Ajuste o raio conforme necessário -->
            </shape>
        </item>
    </selector>
