<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#000000" /> <!-- Cor da sombra preta -->
            <padding android:top="4dp" android:left="4dp" android:right="4dp" />
        </shape>
    </item>
    <!-- Botão -->
    <item android:top="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#4CAF50" /> <!-- Cor do botão -->
        </shape>
    </item>
</layer-list>
