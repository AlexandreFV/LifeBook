<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/LayoutMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <include
        android:id="@+id/includeMainSup"
        layout="@layout/layout_superior"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/includeMainInf"
        layout="@layout/layout_inferior"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/AdicioneAlgoScreen"
        layout="@layout/adicionar_categoria_materia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/Fundo_Adicione_Algo"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fundo_adicione_algo"
        app:circularflow_radiusInDP="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/includeMainSup"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/AdicioneAlgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/adaminaregular"
        android:text="Não há materias ou cartões adicionados"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintEnd_toEndOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintStart_toStartOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintTop_toTopOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TorneVidaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/adaminaregular"
        android:text="Torne sua vida academica mais facil!"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintEnd_toEndOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintTop_toBottomOf="@+id/IconFeliz"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/listViewAgrupamento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/includeMainInf"
        app:layout_constraintTop_toBottomOf="@+id/includeMainSup"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp">

    </ListView>




    <View
        android:id="@+id/FundoSuccess"
        android:layout_width="186dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:background="@drawable/modal_fundo_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeMainSup">

    </View>

    <TextView
        android:id="@+id/TextAdicionadoSuccess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Adicionado Com Sucesso"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/FundoSuccess"
        app:layout_constraintEnd_toEndOf="@+id/FundoSuccess"
        app:layout_constraintStart_toEndOf="@+id/SuccessIcon"
        app:layout_constraintTop_toTopOf="@+id/FundoSuccess"></TextView>

    <View
        android:id="@+id/SuccessIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:background="@drawable/sucesso"
        app:layout_constraintBottom_toBottomOf="@+id/FundoSuccess"
        app:layout_constraintStart_toStartOf="@+id/FundoSuccess"
        app:layout_constraintTop_toTopOf="@+id/FundoSuccess"></View>

    <ImageView
        android:id="@+id/IconFeliz"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintEnd_toEndOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintStart_toStartOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintTop_toTopOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintVertical_bias="0.3"
        app:srcCompat="@drawable/happiness" />

    <Button
        android:id="@+id/AddMateButtInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Adicionar Materia"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintEnd_toEndOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintStart_toStartOf="@+id/Fundo_Adicione_Algo" />


</androidx.constraintlayout.widget.ConstraintLayout>