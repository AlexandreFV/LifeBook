<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/LayoutMain"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <include
        android:id="@+id/includeMainSup"
        layout="@layout/layout_superior"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/includeMainInf"
        layout="@layout/layout_inferior"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/AdicioneAlgoScreen"
        layout="@layout/adicionar_categoria_materia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/Fundo_Adicione_Algo"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/fundo_adicione_algo"
            app:circularflow_radiusInDP="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/includeMainSup"
            app:layout_constraintTop_toBottomOf="@+id/includeMainSup" />


        <TextView
        android:id="@+id/AdicioneAlgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não há nada adicionado!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintEnd_toEndOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintStart_toStartOf="@+id/Fundo_Adicione_Algo"
        app:layout_constraintTop_toTopOf="@+id/Fundo_Adicione_Algo" />

    <ListView
        android:id="@+id/listViewAgrupamento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/includeMainInf"
        app:layout_constraintTop_toBottomOf="@+id/includeMainSup"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" >

    </ListView>




    <View
        android:id="@+id/FundoSuccess"
        android:layout_width="186dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:background="@drawable/modal_fundo_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeMainSup">

    </View>

    <TextView
        android:id="@+id/TextAdicionadoSuccess"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Adicionado Com Sucesso"
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/FundoSuccess"
        app:layout_constraintEnd_toEndOf="@+id/FundoSuccess"
        app:layout_constraintStart_toEndOf="@+id/SuccessIcon"
        app:layout_constraintTop_toTopOf="@+id/FundoSuccess"></TextView>

    <View
        android:id="@+id/SuccessIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:background="@drawable/sucesso"
        app:layout_constraintBottom_toBottomOf="@+id/FundoSuccess"
        app:layout_constraintStart_toStartOf="@+id/FundoSuccess"
        app:layout_constraintTop_toTopOf="@+id/FundoSuccess"></View>


</androidx.constraintlayout.widget.ConstraintLayout>