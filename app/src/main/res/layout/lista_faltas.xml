<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC">


    <include
        android:id="@+id/includeDesempenhoSup"
        layout="@layout/layout_superior"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toBottomOf="@+id/includeDesempenhoInf"
        tools:layout_editor_absoluteX="-8dp" />

    <include
        android:id="@+id/includeDesempenhoInf"
        layout="@layout/layout_inferior"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/fundoListaFaltasFaixa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:alpha="0.8"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/includeDesempenhoSup"
        app:layout_constraintTop_toBottomOf="@+id/includeDesempenhoSup" />

    <ImageView
        android:id="@+id/imageCloseListaDeFaltas"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginBottom="7dp"
        android:alpha="1.0"

        android:onClick="btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/fundoListaFaltasFaixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fundoListaFaltasFaixa"
        app:layout_constraintTop_toBottomOf="@+id/includeDesempenhoSup"
        app:srcCompat="@drawable/close" />

    <include
        android:id="@+id/Cabecalho"
        layout="@layout/header_table_faltas"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/includeDesempenhoSup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Filtrar"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextListaDeFaltas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="1.0"
        android:text="Lista de Faltas"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/fundoListaFaltasFaixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fundoListaFaltasFaixa" />


    <View
        android:id="@+id/Filtrar"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/fundo_button_filtrar_faltas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundoListaFaltasFaixa" />

    <TextView
        android:id="@+id/FiltrarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtrar"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Filtrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Filtrar"
        app:layout_constraintTop_toTopOf="@+id/Filtrar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="86dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cabecalho">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCDCDC">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFaltas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>