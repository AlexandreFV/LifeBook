<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textViewNomeMateria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/borda_input"
            android:elevation="11dp"
            android:hint="Descrição"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/SpinnerMateria"
            app:layout_constraintVertical_bias="0.0" />

        <Spinner
            android:id="@+id/SpinnerMateria"
            android:layout_width="170dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/borda_input"
            android:elevation="11dp"
            android:hint="Materia"
            android:textColor="#000000"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextLembretesAdd"
            app:layout_constraintVertical_bias="0.0" />


        <Spinner
            android:id="@+id/spinnerLembreteCategoria"
            style="@style/FundoSpinner"
            android:layout_width="130dp"
            android:layout_height="43dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/borda_input"
            android:elevation="11dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/SpinnerMateria"
            app:layout_constraintTop_toBottomOf="@+id/TextLembretesAdd" />

        <View
            android:id="@+id/fundoDialog"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_square"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />

        <TextView
            android:id="@+id/TextLembretesAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="11dp"
            android:text="Adicionar Lembrete"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toTopOf="@+id/fundoDialog" />

        <View
            android:id="@+id/linhaMateria"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:elevation="11dp"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextLembretesAdd" />

        <View
            android:id="@+id/linhaMateria2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="#000000"
            android:elevation="11dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonAdicionar"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextLembretesAdd"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/buttonAdicionar"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button"
            android:backgroundTint="#35C956"
            android:elevation="11dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/fundoDialog"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog" />

        <ImageView
            android:id="@+id/buttonCancelarCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="28dp"
            android:elevation="20dp"
            app:layout_constraintBottom_toTopOf="@+id/linhaMateria"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toTopOf="@+id/fundoDialog"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/close" />

        <TextView
            android:id="@+id/TextRemoverButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="11dp"
            android:text="Adicionar"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/buttonAdicionar"
            app:layout_constraintEnd_toEndOf="@+id/buttonAdicionar"
            app:layout_constraintStart_toStartOf="@+id/buttonAdicionar"
            app:layout_constraintTop_toTopOf="@+id/buttonAdicionar" />

        <CheckBox
            android:id="@+id/checkBoxNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/textViewNomeMateria"></CheckBox>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:elevation="11dp"
            android:text="Tornar uma Notificação"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/checkBoxNotif"
            app:layout_constraintTop_toBottomOf="@+id/textViewNomeMateria" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>