<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical">

    <View
        android:id="@+id/barraInferior"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#252323"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/SombraCard"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/FundoDetalhesFaixa">

        <View
            android:id="@+id/SombraFaixa"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.5"
            android:background="#000000" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/add1"
        android:layout_width="57dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barraInferior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barraInferior"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageView
        android:id="@+id/lifeBook1"
        android:layout_width="151dp"
        android:layout_height="71dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/lifebook"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/lembretes"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/barraInferior"
        app:srcCompat="@drawable/lembretes"
        tools:layout_editor_absoluteX="11dp" />

    <ImageView
        android:id="@+id/desempenho"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add1"
        app:layout_constraintStart_toEndOf="@+id/lembretes"
        app:layout_constraintTop_toTopOf="@+id/barraInferior"
        app:srcCompat="@drawable/desempenho" />

    <ImageView
        android:id="@+id/notificacoes"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/configuracoes"
        app:layout_constraintStart_toEndOf="@+id/add1"
        app:layout_constraintTop_toTopOf="@+id/barraInferior"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/notificacoes" />

    <ImageView
        android:id="@+id/configuracoes"
        android:layout_width="70dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/barraInferior"
        app:layout_constraintTop_toTopOf="@+id/barraInferior"
        app:srcCompat="@drawable/configuracao" />


    <View
        android:id="@+id/barraSuperior"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#252323"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/lifeBook"
        android:layout_width="151dp"
        android:layout_height="70dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/lifebook"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/TextCorHex"
        android:layout_width="142dp"
        android:layout_height="38dp"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
        tools:layout_editor_absoluteX="23dp" />

    <ImageView
        android:id="@+id/CardDetalhes"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/create_card_example"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FundoDetalhesFaixa" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="163dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/vector"
        app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
        app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
        app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
        app:layout_constraintVertical_bias="1.0"></ImageView>

    <ImageView
        android:id="@+id/IconImageAdicionada"
        android:layout_width="81dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/TextCategoriaCard"
        app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.75" />

    <View
        android:id="@+id/FundoDetalhesFaixa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:alpha="0.4"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/barraSuperior"
        app:layout_constraintTop_toTopOf="@+id/barraSuperior"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextDetalhesFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do Card"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintEnd_toEndOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintStart_toStartOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintTop_toTopOf="@+id/FundoDetalhesFaixa" />

    <ImageView
        android:id="@+id/ImageClose"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:onClick="btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintTop_toTopOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/TextNomeCard"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
        app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
        app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TextCategoriaCard"
        android:layout_width="95dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
        app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
        app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
        app:layout_constraintVertical_bias="0.78" />


    <TextView
        android:id="@+id/MateriasText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="10dp"
        android:text="Materias"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintVertical_bias="0.0" />

    <!--android:visibility="gone" -->

    <!--android:visibility="gone" -->

    <!--android:visibility="gone" -->

    <ImageView
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/fundomateria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CardDetalhes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMateriasAdicionadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <ImageView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/fundo_button_adicionar_materia"
        app:layout_constraintBottom_toTopOf="@+id/barraInferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewMateriasAdicionadas"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MateriasText" />

</androidx.constraintlayout.widget.ConstraintLayout>