<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:orientation="vertical">

    <include
        android:id="@+id/includeDesempenhoSup"
        layout="@layout/layout_superior" />


    <include
        android:id="@+id/includeDetalhesInf"
        layout="@layout/layout_inferior" />

    <include
        android:id="@+id/AdicioneAlgoScreen"
        layout="@layout/adicionar_categoria_materia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <View
        android:id="@+id/FundoDetalhesFaixa"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:alpha="0.4"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/includeDesempenhoSup"
        app:layout_constraintTop_toBottomOf="@+id/includeDesempenhoSup" />

    <TextView
        android:id="@+id/TextDetalhesFaixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detalhes do Card"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintEnd_toEndOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintStart_toStartOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintTop_toTopOf="@+id/FundoDetalhesFaixa" />

    <ImageView
        android:id="@+id/ImageClose"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:onClick="btnClose"
        app:layout_constraintBottom_toBottomOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintTop_toTopOf="@+id/FundoDetalhesFaixa"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/close" />


    <ScrollView
        android:id="@+id/Teste"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/includeDetalhesInf"
        app:layout_constraintTop_toBottomOf="@+id/includeDesempenhoSup"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCDCDC"
            android:visibility="visible">

            <TextView
                android:id="@+id/TextCorHex"
                android:layout_width="142dp"
                android:layout_height="38dp"
                android:textColor="#000000"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
                tools:layout_editor_absoluteX="23dp" />

            <ImageView
                android:id="@+id/CardDetalhes"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/create_card_example"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="96dp"
                android:layout_height="163dp"
                android:layout_marginEnd="70dp"
                android:src="@drawable/vector"
                app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
                app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
                app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
                app:layout_constraintVertical_bias="1.0"></ImageView>

            <ImageView
                android:id="@+id/IconImageAdicionada"
                android:layout_width="81dp"
                android:layout_height="66dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/TextCategoriaCard"
                app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.75" />


            <TextView
                android:id="@+id/TextNomeCard"
                android:layout_width="133dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
                app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
                app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/TextCategoriaCard"
                android:layout_width="95dp"
                android:layout_height="37dp"
                android:layout_marginEnd="16dp"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/CardDetalhes"
                app:layout_constraintEnd_toEndOf="@+id/CardDetalhes"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/CardDetalhes"
                app:layout_constraintTop_toTopOf="@+id/CardDetalhes"
                app:layout_constraintVertical_bias="0.78" />


            <TextView
                android:id="@+id/MateriasText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="10dp"
                android:text="Materias"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2"
                app:layout_constraintVertical_bias="0.0" />

            <!--android:visibility="gone" -->

            <!--android:visibility="gone" -->

            <!--android:visibility="gone" -->

            <ImageView
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/fundomateria"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewFiltrarButton" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMateriasAdicionadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <ImageView
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/fundo_button_adicionar_materia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerViewMateriasAdicionadas"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/MateriasText" />

            <View
                android:id="@+id/fundoSuccessDetalhesCard"
                android:layout_width="186dp"
                android:layout_height="69dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:alpha="1.0"
                android:background="@drawable/modal_fundo_success"
                android:backgroundTint="#FFFFFF"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FundoDetalhesFaixa">

            </View>

            <TextView
                android:id="@+id/textAdicionadoSuccessDetalhesCard"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:alpha="1.0"
                android:gravity="center"
                android:text="Falta Adicionada"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/fundoSuccessDetalhesCard"
                app:layout_constraintEnd_toEndOf="@+id/fundoSuccessDetalhesCard"
                app:layout_constraintStart_toEndOf="@+id/successIconDetalhesCard"
                app:layout_constraintTop_toTopOf="@+id/fundoSuccessDetalhesCard"></TextView>

            <View
                android:id="@+id/successIconDetalhesCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:alpha="1.0"
                android:background="@drawable/sucesso"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/fundoSuccessDetalhesCard"
                app:layout_constraintStart_toStartOf="@+id/fundoSuccessDetalhesCard"
                app:layout_constraintTop_toTopOf="@+id/fundoSuccessDetalhesCard"></View>

            <ImageView
                android:id="@+id/btnMaisMateria"
                android:layout_width="40dp"
                android:layout_height="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/view2"
                app:srcCompat="@drawable/mais" />

            <Spinner
                android:id="@+id/spinnerFiltro"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:elevation="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/ViewFiltrarButton"
                app:layout_constraintEnd_toEndOf="@+id/ViewFiltrarButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/ViewFiltrarButton" />

            <View
                android:id="@+id/ViewFiltrarButton"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/fundo_button_filtrar_faltas"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CardDetalhes" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar:"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="@+id/ViewFiltrarButton"
                app:layout_constraintStart_toStartOf="@+id/ViewFiltrarButton"
                app:layout_constraintTop_toTopOf="@+id/ViewFiltrarButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>