<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <View
            android:id="@+id/fundoDialog"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_square"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498" />

        <TextView
            android:id="@+id/TextDetalhesFalta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="11dp"
            android:text="Detalhes Falta"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toTopOf="@+id/fundoDialog" />

        <View
            android:id="@+id/linhaMateria2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:elevation="11dp"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextDetalhesFalta" />

        <ImageView
            android:id="@+id/buttonCancelarCard"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:elevation="20dp"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toTopOf="@+id/fundoDialog"
            app:srcCompat="@drawable/close" />

        <TextView
            android:id="@+id/TextNomeCardVariavel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="11dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Nome Materia:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextNomeCardFaltaVariavel" />

        <TextView
            android:id="@+id/TextDataFaltaApagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Data da Falta:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextNomeCardVariavel" />

        <TextView
            android:id="@+id/TextDataFaltaVariavel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="11dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextDataFaltaApagar" />

        <TextView
            android:id="@+id/TextQuantFaltasApagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Quantidade de Faltas:"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/TextDataFaltaApagar"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextDataFaltaVariavel" />

        <TextView
            android:id="@+id/TextQuantFaltasVariavel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="11dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextQuantFaltasApagar" />

        <TextView
            android:id="@+id/TextMotivoFaltasApagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Motivo:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextQuantFaltasVariavel" />

        <TextView
            android:id="@+id/TextMotivoFaltasVariavel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:elevation="11dp"
            android:maxLines="1"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@+id/fundoDialog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextMotivoFaltasApagar" />

        <TextView
            android:id="@+id/TextNomeCardFalta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:elevation="11dp"
            android:text="Nome Card:"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/linhaMateria2" />

        <TextView
            android:id="@+id/TextNomeCardFaltaVariavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="11dp"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/fundoDialog"
            app:layout_constraintTop_toBottomOf="@+id/TextNomeCardFalta" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
